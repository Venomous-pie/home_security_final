<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartHomeAppFinal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_dark_surface_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- General background and surface colors for dark theme -->
        <item name="android:colorBackground">@color/default_dark_surface_color</item>
        <item name="colorSurface">@color/default_dark_surface_color</item>
        <item name="colorOnBackground">@color/splash_text_gray</item>
        <item name="colorOnSurface">@color/splash_text_gray</item>
        
        <!-- Custom navigation bar color -->
        <item name="navigationBarColor">@color/default_dark_surface_color</item>
        
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartHomeAppFinal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>