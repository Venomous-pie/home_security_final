<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF333333" 
    android:padding="16dp">

    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_home_black_24dp" /> 

    <LinearLayout
        android:id="@+id/ll_user_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/header_icon"
        android:layout_alignTop="@id/header_icon" 
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" 
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvUserEmailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_user_greeting"
        android:layout_toEndOf="@id/header_icon"
        android:layout_marginTop="4dp" 
        android:text="dedicatoriacj7@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" 
        android:textColor="@android:color/darker_gray" /> 

</RelativeLayout> 