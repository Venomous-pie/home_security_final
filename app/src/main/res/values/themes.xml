<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartHomeAppFinal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/splash_background_gray</item>
        <item name="colorPrimaryVariant">@color/splash_text_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Custom navigation bar color -->
        <item name="navigationBarColor">@color/splash_background_gray</item>
        <!-- Explicitly define error colors for light theme to ensure contrast -->
        <item name="colorError">#F44336</item> <!-- Standard Red -->
        <item name="colorOnError">#FFFFFF</item> <!-- White -->

        <!-- Control highlight for ripple effects -->
        <item name="colorControlHighlight">#33424242</item> <!-- 20% opacity of splash_text_gray -->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartHomeAppFinal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartHomeAppFinal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Styles for "More" Screen -->
    <style name="MoreScreenSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/splash_text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MoreScreenItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MoreScreenItemIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:tint">@color/splash_text_gray</item> <!-- Default tint -->
    </style>

    <style name="MoreScreenItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MoreScreenItemDisclosure">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
        <item name="android:tint">@color/splash_text_gray</item>
    </style>

    <style name="MoreScreenDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>